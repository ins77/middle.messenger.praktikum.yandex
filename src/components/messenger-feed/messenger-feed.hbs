<main class="messenger-feed {{#if className}}{{ className }}{{/if}}">
    <header class="messenger-feed__header">
        <div class="messenger-feed__header-user">
            {{#if avatar}}
                <img class="messenger-feed__header-user-avatar" src="{{ avatarUrl }}" alt="аватар" />
            {{else }}
                <div class="messenger-feed__header-user-avatar"></div>
            {{/if}}
            <span class="messenger-feed__header-user-name">{{ name }}</span>
        </div>
        <button class="messenger-feed__header-button-menu"></button>
    </header>

    <div class="messenger-feed__messages">
        {{#each (messenger-page-feed)}}
            <div class="messenger-feed__message {{#if own}}messenger-feed__message--own{{/if}}">
                {{#if image}}
                    <img class="messenger-feed__message-image" src={{ image }} alt="изображение" />
                {{else }}
                    {{ message }}
                {{/if}}
                <div class="messenger-feed__message-time {{#if read}}messenger-feed__message-time--checked{{/if}}">
                    {{#if own}}
                        <span class="messenger-feed__message-checked"></span>
                    {{/if}}
                    {{ time }}
                </div>
            </div>
        {{/each}}
    </div>

    <form class="messenger-feed__footer-form">
        <button class="messenger-feed__footer-button-add"><i class="fa-solid fa-paperclip"></i></button>
        {{> InputFieldSecondary placeholder="Сообщение" type="text" name="message" }}
        {{#> Button round=true type="submit" }}<i class="fa-solid fa-arrow-right"></i>{{/Button}}
    </form>
</main>
